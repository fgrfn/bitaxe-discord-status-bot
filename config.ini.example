[Bot]
# Your Discord Bot Token (https://discord.com/developers/applications)
token = YOUR_DISCORD_BOT_TOKEN_HERE

# Discord Channel ID where status updates will be posted
channel_id = YOUR_CHANNEL_ID_HERE

# Update interval in seconds (default: 30)
update_interval = 30

# Optional: User ID to mention on new records
mention_user_id = YOUR_USER_ID_HERE

# BitAxe Device Configuration
[bitaxe-gamma]
# IP address of your BitAxe device
ip = 192.168.1.100

# Temperature thresholds: green, yellow, red (in °C)
temp_thresholds = 60,65,70

# Fan RPM thresholds: min, low, normal, max
fan_thresholds = 0,2000,3500,7500

# Voltage thresholds: green, yellow, red (in V)
volt_thresholds = 0.95,1.1,1.3

# VR Temperature thresholds: green, yellow, red (in °C)
vr_temp_thresholds = 65,75,80

# NerdAxe Device Configuration (optional)
[nerdaxe]
ip = 192.168.1.101
temp_thresholds = 60,65,70
fan_thresholds = 0,2000,3500,7500
volt_thresholds = 0.95,1.1,1.3
vr_temp_thresholds = 65,75,80
